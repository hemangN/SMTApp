<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_appback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_back"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="10" >

    <TextView
        android:id="@+id/txt_stage1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/stage1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lyt_tap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/lyt_tap_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:id="@+id/lyt_before_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_tap_inst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hold_inst"
                android:textColor="@color/white"
                android:textSize="20sp" 
                android:gravity="center"
                android:drawableTop="@drawable/ciggarete"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_after_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txt_tap_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_success_1"
                android:textColor="@color/white"
                android:textSize="20sp"
				 />

            <TextView
                android:id="@+id/txt_register_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_success_2"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/stage_one_inst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/smoke_inst"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center"
        android:layout_weight="1"
        android:background="@drawable/button_selector"
        android:text="@string/action_settings"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center"
        android:layout_weight="1"
        android:background="@drawable/button_selector"
        android:text="@string/help"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_prog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/progress_01" />

</LinearLayout>